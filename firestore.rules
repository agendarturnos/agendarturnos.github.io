rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, update, delete: if request.auth != null && request.auth.token.companyId == resource.data.companyId;
      allow create: if request.auth != null && request.auth.token.companyId == request.resource.data.companyId;
    }
  }
}
